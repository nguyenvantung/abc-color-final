<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:scrollbars="horizontal">
    <LinearLayout
        android:background="@android:color/transparent"
        android:id="@+id/layoutPencil"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_220"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/pencilAqua"
            android:layout_width="@dimen/size_50"
            android:layout_height="wrap_content"
            android:src="@drawable/pencil_aquamarine"
            android:layout_gravity="top"/>
        <ImageView
            android:id="@+id/pencilBei"
            android:layout_width="@dimen/size_50"
            android:layout_height="wrap_content"
            android:src="@drawable/pencil_beige"
            android:layout_gravity="bottom"/>
        <ImageView
            android:id="@+id/pencilBlack"
            android:layout_width="@dimen/size_50"
            android:layout_height="wrap_content"
            android:src="@drawable/pencil_black"
            android:layout_gravity="bottom"/>
        <ImageView
            android:id="@+id/pencilBlue"
            android:layout_width="@dimen/size_50"
            android:layout_height="wrap_content"
            android:src="@drawable/pencil_blue"
            android:layout_gravity="bottom"/>
        <ImageView
            android:id="@+id/pencilBright"
            android:layout_width="@dimen/size_50"
            android:layout_height="wrap_content"
            android:src="@drawable/pencil_bright_green"
            android:layout_gravity="bottom"/>
        <ImageView
            android:id="@+id/pencilBrow"
            android:layout_width="@dimen/size_50"
            android:layout_height="wrap_content"
            android:src="@drawable/pencil_brown"
            android:layout_gravity="bottom"/>
        <ImageView
            android:id="@+id/pencilCopper"
            android:layout_width="@dimen/size_50"
            android:layout_height="wrap_content"
            android:src="@drawable/pencil_copper"
            android:layout_gravity="bottom"/>
        <ImageView
            android:id="@+id/pencilCrimson"
            android:layout_width="@dimen/size_50"
            android:layout_height="wrap_content"
            android:src="@drawable/pencil_crimson"
            android:layout_gravity="bottom"/>
        <ImageView
            android:id="@+id/pencilGold"
            android:layout_width="@dimen/size_50"
            android:layout_height="wrap_content"
            android:src="@drawable/pencil_gold"
            android:layout_gravity="bottom"/>
        <ImageView
            android:id="@+id/pencilGreen"
            android:layout_width="@dimen/size_50"
            android:layout_height="wrap_content"
            android:src="@drawable/pencil_green"
            android:layout_gravity="bottom"/>
        <ImageView
            android:id="@+id/pencilGrey"
            android:layout_width="@dimen/size_50"
            android:layout_height="wrap_content"
            android:src="@drawable/pencil_grey"
            android:layout_gravity="bottom"/>

        <ImageView
            android:id="@+id/pencilLight"
            android:layout_width="@dimen/size_50"
            android:layout_height="wrap_content"
            android:src="@drawable/pencil_light_blue"
            android:layout_gravity="bottom"/>
        <ImageView
            android:id="@+id/pencilMa"
            android:layout_width="@dimen/size_50"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/pencil_magenta"/>
        <ImageView
            android:id="@+id/pencilOrange"
            android:layout_width="@dimen/size_50"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/pencil_orange"/>
        <ImageView
            android:id="@+id/pencilPink"
            android:layout_width="@dimen/size_50"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/pencil_pink"/>
        <ImageView
            android:id="@+id/pencilPurple"
            android:layout_width="@dimen/size_50"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/pencil_purple"/>
        <ImageView
            android:id="@+id/pencilRed"
            android:layout_width="@dimen/size_50"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/pencil_red"/>
        <ImageView
            android:id="@+id/pencilVai"
            android:layout_width="@dimen/size_50"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/pencil_vailet"/>
        <ImageView
            android:id="@+id/pencilWhite"
            android:layout_width="@dimen/size_50"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/pencil_white"/>
        <ImageView
            android:id="@+id/pencilYellow"
            android:layout_width="@dimen/size_50"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/pencil_yellow"/>


    </LinearLayout>

</HorizontalScrollView>